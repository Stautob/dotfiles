# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  color_good = "#a6e22e"
  color_degraded = "#dfdf00"
  color_bad = "#f92672"
  color_charging = "#00aabb"
  interval = 5
}

order += "hamster"
order += "ipv6"
order += "diskdata"
order += "online_status"
order += "wifi"
order += "backlight"
order += "volume_status"
order += "battery_level"
order += "sysdata"
order += "tztime local"

# on klick to WIFI?

hamster {
  cache_timeout = 60
}

netdata {
  nic = "wlp3s0"
  nic = "enp0s25"
}

diskdata {
  format = "💾 {disk}: {used_percent}% used"
}

online_status {
  cache_timeout = 30
  icon_off = "⚠️"
  icon_on = "🌐"
  url = "http://google.com"
}

wifi {
  format = "[	{ssid}: {bitrate} {signal_percent}]|	Disabled"
}

backlight {
  device = "/sys/class/backlight/intel_backlight"
}

volume_status {
  format = "🔊	{percentage}%"
  format_muted = "🔇	muted"
}

battery_level {
  battery_id = "all"
  hide_seconds = True
  measurement_mode = "acpi"
  notify_low_level = True
  threshold_full = 95
  blocks = "🔋🔋🔋🔋🔋🔋🔋🔋🔋"
  charging_character = "⚡"
  format = "{icon} {percent}% ({time_remaining})"
  format_down = "⚠️ No battery found"
  format_notify_discharging = "⚠️ Battery low {percent}% | {time_remaining}"
}

sysdata {
  format = "CPU: {cpu_usage}%  MEM: {mem_used}G / {mem_total}G"
}

tztime local {
  format = "%d-%m-%Y	%H:%M:%S"
}

